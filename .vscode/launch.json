// FastLED Project Debug Configurations (Manually Maintained)
//
// PlatformIO Debugging Solution
//
// Documentation: https://docs.platformio.org/en/latest/plus/debugging.html
// Configuration: https://docs.platformio.org/en/latest/projectconf/sections/env/options/debug/index.html

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Arduino: Run .ino with FastLED (Examples)",
            "type": "node-terminal",
            "request": "launch",
            "command": "uv run fastled \"${file}\" --no-auto-updates",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "C++: Debug Test (Tests Directory)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/.build/bin/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile Current Test File (Debug Only)",
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "trace": false
            }
        },
        {
            "name": "Python: FastLED Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "args": ["--cpp"]
        },
        {
            "name": "Python: CI Compile",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ci/ci-compile.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "args": ["uno", "--examples", "Blink"]
        },
        {
            "name": "Python: MCP Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mcp_server.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "platformio-debug",
            "request": "launch",
            "name": "PlatformIO: Debug",
            "executable": "c:/Users/niteris/dev/fastled/.pio/build/dev/firmware.elf",
            "projectEnvName": "dev",
            "toolchainBinDir": "C:/Users/niteris/.platformio/packages/toolchain-xtensa-esp-elf/bin",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": {
                "type": "PlatformIO",
                "task": "Pre-Debug"
            }
        },
        {
            "type": "platformio-debug",
            "request": "launch",
            "name": "PlatformIO: Debug (skip Pre-Debug)",
            "executable": "c:/Users/niteris/dev/fastled/.pio/build/dev/firmware.elf",
            "projectEnvName": "dev",
            "toolchainBinDir": "C:/Users/niteris/.platformio/packages/toolchain-xtensa-esp-elf/bin",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "platformio-debug",
            "request": "launch",
            "name": "PlatformIO: Debug (without uploading)",
            "executable": "c:/Users/niteris/dev/fastled/.pio/build/dev/firmware.elf",
            "projectEnvName": "dev",
            "toolchainBinDir": "C:/Users/niteris/.platformio/packages/toolchain-xtensa-esp-elf/bin",
            "internalConsoleOptions": "openOnSessionStart",
            "loadMode": "manual"
        }
    ]
}
     