{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitThis": false,
    "suppressExcessPropertyErrors": true,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "lib": ["dom", "dom.asynciterable", "es2022", "webworker"]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        // Critical Safety & Bug Prevention
        "eqeqeq",
        "no-eval", 
        "no-throw-literal",
        "prefer-const",
        
        // Performance Best Practices  
        "no-await-in-loop",
        
        // Code Quality (lenient)
        "default-param-last"
      ],
      "exclude": [
        // Allow console usage (needed for debug output)
        "no-console",
        
        // Allow unused variables (common in graphics/audio callbacks)  
        "no-unused-vars",
        
        // Allow explicit any (gradual typing)
        "no-explicit-any",
        
        // Allow non-null assertions (sometimes needed for DOM)
        "no-non-null-assertion",
        
        // Keep flexible for WebAssembly bindings
        "ban-types",
        
        // Allow snake_case naming (WebAssembly interface compatibility)
        "camelcase",
        
        // Allow unguarded for-in (common in this codebase)
        "guard-for-in",
        
        // Allow undefined globals (browser environment)
        "no-undef",
        
        // Allow multiple var declarations per line
        "single-var-declarator",
        
        // Allow sparse arrays (used in graphics)
        "no-sparse-arrays"
      ]
    },
    "include": [
      "src/platforms/wasm/"
    ],
    "exclude": []
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/platforms/wasm/"
    ],
    "exclude": []
  }
}
