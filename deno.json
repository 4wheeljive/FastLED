{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true,
    "lib": ["dom", "dom.asynciterable", "es2022", "webworker"]
  },
  "lint": {
    "include": [
      "src/platforms/wasm/compiler/*.js",
      "src/platforms/wasm/compiler/modules/*.js"
    ],
    "exclude": [
      "**/*.min.js",
      "**/vendor/**",
      "**/node_modules/**",
      "**/.build/**",
      "**/build/**",
      "**/dist/**",
      "**/tmp/**",
      "**/three.min.js",
      "**/codemirror.min.js",
      "**/bootstrap.min.js"
    ],
    "rules": {
      "tags": [],
      "include": [
        "no-debugger",
        "no-eval",
        "eqeqeq",
        "prefer-const",
        "no-var"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/platforms/wasm/compiler/*.js",
      "src/platforms/wasm/compiler/modules/*.js"
    ],
    "exclude": [
      "**/*.min.js",
      "**/vendor/**",
      "**/node_modules/**",
      "**/.build/**",
      "**/build/**",
      "**/dist/**",
      "**/tmp/**",
      "**/three.min.js",
      "**/codemirror.min.js",
      "**/bootstrap.min.js"
    ],
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
